        "text": [
          "وَ لَمْ‌ يَکُنْ‌ لَهُ‌ کُفُواً أَحَدٌ"
        ],
        "translations": {
          "en.ahmedali": [
            "There is no one comparable to Him.\""
          ],
          "en.ahmedraza": [
            "“And there is none equal to Him.”"
          ],
          "en.arberry": [
            "and equal to Him is not any one.'"
          ],
          "en.daryabadi": [
            "And there hath never been co-equal with Him anyone."
          ],
          "en.hilali": [
            "\"And there is none co-equal or comparable unto Him.\""
          ],
          "en.itani": [
            "And there is nothing comparable to Him.”"
          ],
          "en.maududi": [
            "and none is comparable to Him.”"
          ],
          "en.mubarakpuri": [
            "\"And there is none comparable to Him.\""
          ],
          "en.pickthall": [
            "And there is none comparable unto Him."
          ],
          "en.qarai": [
            "nor has He any equal.’"
          ],
          "en.qaribullah": [
            "and there is none equal to Him'"
          ],
          "en.sahih": [
            "Nor is there to Him any equivalent.\""
          ],
          "en.sarwar": [
            "There is no one equal to Him."
          ],
          "en.shakir": [
            "And none is like Him."
          ],
          "en.transliteration": [
            "Walam yakun lahu kufuwan a<u>h</u>ad<b>un</b>"
          ],
          "en.wahiduddin": [
            "and there is nothing like Him.\""
          ],
          "en.yusufali": [
            "And there is none like unto Him."
          ],
          "fa.ansarian": [
            "و هیچ کس [در ذات و صفات] همانند و همتا و شبیه او نمی باشد."
          ],
          "fa.ayati": [
            "و نه هيچ كس همتاى اوست."
          ],
          "fa.bahrampour": [
            "و او را هيچ همتايى نباشد"
          ],
          "fa.fooladvand": [
            "و هيچ كس او را همتا نيست.»"
          ],
          "fa.ghomshei": [
            "و نه هیچ کس مثل و مانند و همتای اوست."
          ],
          "fa.khorramdel": [
            "و کسی همتا و همگون او نمی‌باشد. [[«کُفُواً»: همتا. همگون. یعنی خداگونه‌ای وجود ندارد، و کسی شبیه و همسنگ و همبر او نیست.]]"
          ],
          "fa.khorramshahi": [
            "و او را هیچ کس همتا نیست‌"
          ],
          "fa.makarem": [
            "و برای او هیچگاه شبیه و مانندی نبوده است!"
          ],
          "fa.moezzi": [
            "و نبودش همتا کسی‌"
