        "text": [
          "اللَّهُ‌ الصَّمَدُ"
        ],
        "translations": {
          "en.ahmedali": [
            "God the immanently indispensable."
          ],
          "en.ahmedraza": [
            "“Allah is the Un-wanting.” (Perfect, does not require anything.)"
          ],
          "en.arberry": [
            "God, the Everlasting Refuge,"
          ],
          "en.daryabadi": [
            "Allah, the Independent,"
          ],
          "en.hilali": [
            "\"Allah-us-Samad (The Self-Sufficient Master, Whom all creatures need, He neither eats nor drinks)."
          ],
          "en.itani": [
            "God, the Absolute."
          ],
          "en.maududi": [
            "Allah, Who is in need of none and of Whom all are in need;"
          ],
          "en.mubarakpuri": [
            "\"Allah As-Samad.\""
          ],
          "en.pickthall": [
            "Allah, the eternally Besought of all!"
          ],
          "en.qarai": [
            "Allah is the All-embracing."
          ],
          "en.qaribullah": [
            "the called upon."
          ],
          "en.sahih": [
            "Allah, the Eternal Refuge."
          ],
          "en.sarwar": [
            "God is Absolute."
          ],
          "en.shakir": [
            "Allah is He on Whom all depend."
          ],
          "en.transliteration": [
            "All<u>a</u>hu a<b>l</b><u>ss</u>amad<b>u</b>"
          ],
          "en.wahiduddin": [
            "God, the Self-sufficient One."
          ],
          "en.yusufali": [
            "Allah, the Eternal, Absolute;"
          ],
          "fa.ansarian": [
            "خدای بی نیاز [همه موجودات هستی که نیازمند و عین فقرند برای رفع نیازشان روی به او کنند و از حضرتش گدایی نمایند.]"
          ],
          "fa.ayati": [
            "خداى كه در حاجت به او رو كنند،"
          ],
          "fa.bahrampour": [
            "خدايى كه همه، نياز بدو برند"
          ],
          "fa.fooladvand": [
            "خداى صمد [ثابت - متعالى‌]،"
          ],
          "fa.ghomshei": [
            "آن خدایی که (از همه عالم) بی نیاز (و همه عالم به او نیازمند) است."
          ],
          "fa.khorramdel": [
            "خدا، سَرورِ والای برآورنده‌ی امیدها و برطرف‌کننده‌ی نیازمندیها است. [[«الصَّمَدُ»: سَرورِ والائی که برای رفع حوائج و دفع مصائب، تنها بدو رو کنند. می‌توان واژه‌های رائج در زبان فارسی همچون «حضرت والا، قبله عالم، کعبه آمال» را مفاهیمی از واژه «صمد» دانست.]]"
          ],
          "fa.khorramshahi": [
            "خداوند صمد"
          ],
          "fa.makarem": [
            "خداوندی است که همه نیازمندان قصد او می‌کنند؛"
          ],
          "fa.moezzi": [
            "خداوند است صمد"
          ],
          "fa.mojtabavi": [
            "خدا تنها بى‌نيازى است كه نيازها بدو برند."
          ],
          "fa.sadeqi": [
            "«خدا، (همان) پروردگار بی‌نیاز مطلق است.»"
          ]
        }
      },
